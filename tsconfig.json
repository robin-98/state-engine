{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es5",
        "lib": ["es2015", "dom"],
        "declarationDir": "lib",
        "outDir": "lib"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
